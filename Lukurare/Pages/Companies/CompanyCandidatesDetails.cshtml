@page
@model SeekersHub.Pages.Companies.CompanyCandidatesDetailsModel
@{
    Layout = "/Pages/Shared/_CompaniesLayout.cshtml";
    ViewData["Title"] = "Candidate Details";
}

<main class="main">
    <section class="section-box-2">
        <div class="container">
            <div class="banner-hero banner-image-single"><img src="/assets/imgs/page/candidates/img.png" alt="SeekersHub"></div>
            <div class="box-company-profile">
                <div class="image-compay"><img data-bind="attr: { src: EntityProfileImage }" style="width:100px; height:100px;" alt="SeekersHub"></div>
                <div class="row mt-10">
                    <div class="col-lg-8 col-md-12">
                        <h5 class="f-18" data-bind="text: EntityName"><span class="card-location font-regular ml-20" data-bind="text: Location"></span></h5>
                    </div>
                    @*<div class="col-lg-4 col-md-12 text-lg-end"><a class='btn btn-download-icon btn-apply btn-apply-big' href='page-contact.html'>Download CV</a></div>*@
                </div>
            </div>
            <div class="box-nav-tabs mt-40 mb-5">
                <ul class="nav" role="tablist">
                    <li><a class="btn btn-border aboutus-icon mr-15 mb-5 active" href="#tab-short-bio" data-bs-toggle="tab" role="tab" aria-controls="tab-short-bio" aria-selected="true">Short Bio</a></li>
                    <li><a class="btn btn-border recruitment-icon mr-15 mb-5" href="#tab-skills" data-bs-toggle="tab" role="tab" aria-controls="tab-skills" aria-selected="false">Skills</a></li>
                    <li><a class="btn btn-border people-icon mb-5" href="#tab-work-experience" data-bs-toggle="tab" role="tab" aria-controls="tab-work-experience" aria-selected="false">Working Experience</a></li>
                    <li><a class="btn btn-border people-icon mb-5" href="#tab-work-portfolio" data-bs-toggle="tab" role="tab" aria-controls="tab-work-portfolio" aria-selected="false">Portfolio</a></li>
                </ul>
            </div>
            <div class="border-bottom pt-10 pb-10"></div>
        </div>
    </section>
    <section class="section-box mt-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                    <div class="content-single">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-short-bio" role="tabpanel" aria-labelledby="tab-short-bio">
                                <h4>Career Interest</h4>
                                <ul>
                                    <li><strong class="small-heading">Desired Industry or Field</strong><br /><span data-bind="text: desiredIndustry"></span></li>
                                    <li><strong class="small-heading">Preferred Job Functions or Roles</strong><br /><span data-bind="text: preferredRoles"></span></li>
                                    <li><strong class="small-heading">Career Goals and Aspirations</strong><br /><span data-bind="text: careerGoals"></span></li>
                                </ul>
                                <h4>Availability</h4>
                                <ul>
                                    <li><strong class="small-heading">Availability for Internships </strong><br /><span data-bind="text: internshipAvailability"></span></li>
                                    <li><strong class="small-heading">Preferred Start Date</strong><br /><span data-bind="text: preferredStartDate"></span></li>
                                </ul>
                                <h4>Preferences</h4>
                                <ul>
                                    <li><strong class="small-heading">Location Preference for Internships</strong><br /><span data-bind="text: locationPreference"></span></li>
                                    <li><strong class="small-heading">Industry Preferences</strong><br /><span data-bind="text: industryPreferences"></span></li>
                                    <li><strong class="small-heading">Company Size or Type Preferences</strong><br /><span data-bind="text: companyPreferences"></span></li>
                                </ul>
                            </div>
                            <div class="tab-pane fade" id="tab-skills" role="tabpanel" aria-labelledby="tab-skills">
                                <h4>Skills</h4>
                                <ul>
                                    <li><strong class="small-heading">Technical Skills</strong><br /> <span data-bind="text: technicalSkills"></span></li>
                                    <li><strong class="small-heading">Soft Skills</strong><br /> <span data-bind="text: softSkills"></span></li>
                                    <li><strong class="small-heading">Language Proficiency</strong><br /> <span data-bind="text: languageProficiency"></span></li>
                                </ul>
                                <h4 class="mt-10">Certifications and Training</h4>
                                <h5 class="mt-3">Relevant Certifications</h5>
                                <p data-bind="text: relevantCertifications"></p>
                                <h5 class="mt-3">Training Programs Attended</h5>
                                <p data-bind="text: trainingPrograms"></p>

                            </div>
                            <div class="tab-pane fade" id="tab-work-experience" role="tabpanel" aria-labelledby="tab-work-experience">
                                <h4>Work Experiences</h4>
                                <h5 class="mt-3">Internships</h5>
                                <p data-bind="text: internships"></p>
                                <h5 class="mt-3">Part-time Jobs</h5>
                                <p data-bind="text: partTimeJobs"></p>
                                <h5 class="mt-3">Volunteer Work</h5>
                                <p data-bind="text: volunteerWork"></p>
                                <h5 class="mt-3">Relevant Projects or Research Experience</h5>
                                <p data-bind="text: relevantProjects"></p>

                                <h4>Projects Done</h4>
                                <h5 class="mt-3">Description of Projects Completed</h5>
                                <p data-bind="text: projectDescription"></p>
                                <h5 class="mt-3">Objectives and Outcomes Achieved</h5>
                                <p data-bind="text: projectObjectives"></p>
                                <h5 class="mt-3">Technologies or Tools Used</h5>
                                <p data-bind="text: projectTechnologies"></p>
                                <h5 class="mt-3">Roles and Responsibilities</h5>
                                <p data-bind="text: projectRoles"></p>

                                <h4>Extracurricular Activities</h4>
                                <h5 class="mt-3">Clubs or Organizations</h5>
                                <p data-bind="text: clubs"></p>
                                <h5 class="mt-3">Leadership Roles</h5>
                                <p data-bind="text: leadershipRoles"></p>
                                <h5 class="mt-3">Awards or Achievements</h5>
                                <p data-bind="text: awards"></p>
                            </div>
                            <div class="tab-pane fade" id="tab-work-portfolio" role="tabpanel" aria-labelledby="tab-work-portfolio">
                                <h4>Portfolio</h4>
                                <h5 class="mt-3">Portfolio Link 1</h5>
                                <p data-bind="text: portfolioLink1"></p>
                                <h5 class="mt-3">Work Sample 1</h5>
                                <p data-bind="text: workSample1"></p>
                                <h5 class="mt-3">Portfolio Link 2</h5>
                                <p data-bind="text: portfolioLink2"></p>
                                <h5 class="mt-3">Work Sample 2</h5>
                                <p data-bind="text: workSample2"></p>
                                <h5 class="mt-3">Portfolio Link 3</h5>
                                <p data-bind="text: portfolioLink3"></p>
                                <h5 class="mt-3">Work Sample 3</h5>
                                <p data-bind="text: workSample3"></p>

                                <h4>References</h4>
                                <h5 class="mt-3">Reference 1</h5>
                                <p data-bind="text: reference1"></p>
                                <h5 class="mt-3">Contact Details for Reference 1</h5>
                                <p data-bind="text: contact1"></p>
                                <h5 class="mt-3">Reference 2</h5>
                                <p data-bind="text: reference2"></p>
                                <h5 class="mt-3">Contact Details for Reference 2</h5>
                                <p data-bind="text: contact2"></p>
                                <h5 class="mt-3">Reference 3</h5>
                                <p data-bind="text: reference3"></p>
                                <h5 class="mt-3">Contact Details for Reference 3</h5>
                                <p data-bind="text: contact3"></p>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 col-12 pl-40 pl-lg-15 mt-lg-30">
                    <div class="sidebar-border">
                        <h5 class="f-18">Education Background</h5>
                        <div class="sidebar-list-job">
                            <ul>
                                <li>
                                    <div class="sidebar-icon-item"><i class="fi-rr-school"></i></div>
                                    <div class="sidebar-text-info"><span class="text-description">Current School/University</span><strong class="small-heading" data-bind="text: school"></strong></div>
                                </li>
                                <li>
                                    <div class="sidebar-icon-item"><i class="fi-rr-briefcase"></i></div>
                                    <div class="sidebar-text-info"><span class="text-description">Degree Program/Diploma/Certificate</span><strong class="small-heading" data-bind="text: degree"></strong></div>
                                </li>
                                <li>
                                    <div class="sidebar-icon-item"><i class="fi-rr-time-check"></i></div>
                                    <div class="sidebar-text-info"><span class="text-description">Year of Study</span><strong class="small-heading" data-bind="text: year"></strong></div>
                                </li>
                                <li>
                                    <div class="sidebar-icon-item"><i class="fi-rr-time-fast"></i></div>
                                    <div class="sidebar-text-info"><span class="text-description">Expected internship Period</span><strong class="small-heading" data-bind="text: expectedInternshipPeriod"></strong></div>
                                </li>
                                <li>
                                    <div class="sidebar-icon-item"><i class="fi-rr-time-fast"></i></div>
                                    <div class="sidebar-text-info"><span class="text-description">Expected Graduation Date</span><strong class="small-heading" data-bind="text: expectedGraduationDate"></strong></div>
                                </li>
                            </ul>
                        </div>
                        <div class="sidebar-list-job">
                            <ul class="ul-disc">
                                <li data-bind="text: Location"></li>
                                <li>Phone: <span data-bind="text: EntityPhone"></span></li>
                                <li>Email: <span data-bind="text: EntityEmail"></span></li>
                            </ul>
                            <div class="mt-30"><a class='btn btn-send-message' href='#'>Send Message</a></div>
                        </div>
                    </div>

                </div>
            </div>
           
        </div>
    </section>    
</main>

@section Scripts{
    <script src="/assets/js/companies/companies.js"></script>
}