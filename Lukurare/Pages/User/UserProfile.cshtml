@page
@model Lukurare.Pages.User.UserProfileModel
@{
    Layout = "/Pages/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Profile";
}

<main class="main">
    <section class="section-box-2">
        <div class="container">
            <div class="banner-hero banner-image-single"><img src="/assets/imgs/page/candidates/img.png" alt="Lukurare"><a class="btn-editor" href="#"></a></div>
            <div class="box-company-profile">
                <div class="image-compay"><img data-bind="attr: { src: PhotoLinkUrl}" alt="Lukurare" style="width: 100px; height: 100px;"></div>
                <div class="row mt-10">
                    <div class="col-lg-8 col-md-12">
                        <h5 class="f-18" data-bind="text: Brand"><span class="card-location font-regular ml-20" data-bind="text: Location"></span></h5>
                        @*<p class="mt-0 font-md color-text-paragraph-2 mb-15">UI/UX Designer. Front end Developer</p>*@
                    </div>
                    @*<div class="col-lg-4 col-md-12 text-lg-end"><a class='btn btn-preview-icon btn-apply btn-apply-big' href='page-contact.html'>Preview</a></div>*@
                </div>
            </div>
            <div class="border-bottom pt-10 pb-10"></div>
        </div>
    </section>
    <section class="section-box mt-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="box-nav-tabs nav-tavs-profile mb-5">
                        <ul class="nav" role="tablist">
                            <li><a class="btn btn-border aboutus-icon mb-20 active" href="#tab-my-profile" data-bs-toggle="tab" role="tab" aria-controls="tab-my-profile" aria-selected="true">My Profile</a></li>
                            <li><a class="btn btn-border recruitment-icon mb-20" href="#tab-my-jobs" data-bs-toggle="tab" role="tab" aria-controls="tab-my-jobs" aria-selected="false">View Profile</a></li>
                        </ul>
                        <div class="border-bottom pt-10 pb-10"></div>                       
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-sm-12 col-12 mb-50">
                    <div class="content-single">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-my-profile" role="tabpanel" aria-labelledby="tab-my-profile">
                                <h3 class="mt-0 mb-15 color-brand-1">My Account</h3><a class="font-md color-text-paragraph-2" href="#">Update your profile</a>
                                <div class="mt-35 mb-40 box-info-profie">
                                    <div class="image-profile">
                                        <img data-bind="attr: { src: PhotoLinkUrl}" alt="Lukurare">
                                    </div>
                                    <!-- Add an input element of type file and hide it -->
                                    <input type="file" id="fileInput" style="display: none;">
                                    <!-- Modify the button to trigger the input element when clicked -->
                                    <a class="btn btn-apply" id="chooseAndUploadBtn">Upload Avatar</a>
                                    <!-- <a class="btn btn-link">Delete</a> -->
                                </div>
                                <div class="box-content">
                                    <div class="row">
                                        <div class="col-xl-6 col-6">
                                            <div class="card mb-3" id="educationalBackgroundCard">
                                                <div class="card-body">
                                                    <h5 class="card-title">Educational Background</h5>
                                                    <form>
                                                        <div class="form-group">
                                                            <label for="school">Current School/University</label>
                                                            <input type="text" class="form-control" id="school" placeholder="Enter your current school or university" data-bind="value: school">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="degree">Degree Program/Diploma/Certificate</label>
                                                            <input type="text" class="form-control" id="degree" placeholder="Enter your degree program, diploma, or certificate" data-bind="value: degree">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="year">Year of Study</label>
                                                            <input type="number" class="form-control" id="year" placeholder="Enter your current year of study" data-bind="value: year">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="internship">Expected Internship Period</label>
                                                            <input type="text" class="form-control" id="internship" placeholder="Enter your expected internship period" data-bind="value: expectedInternshipPeriod">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="graduation">Expected Graduation Date</label>
                                                            <input type="date" class="form-control" id="graduation" placeholder="Enter your expected graduation date" data-bind="value: expectedGraduationDate">
                                                        </div>
                                                        <button type="submit" class="btn btn-primary" data-bind="click: educationBackground">Submit</button>
                                                    </form>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="col-xl-6 col-6">
                                            <div class="card mb-3" id="skillsCard">
                                                <div class="card-body">
                                                    <h5 class="card-title">Skills and Expertise</h5>
                                                    <form id="skills-form">
                                                        <div class="form-group">
                                                            <label for="technical-skills">Technical Skills</label>
                                                            <input type="text" class="form-control" id="technical-skills" placeholder="E.g., programming languages, software proficiency" data-bind="value: technicalSkills">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="soft-skills">Soft Skills</label>
                                                            <input type="text" class="form-control" id="soft-skills" placeholder="E.g., communication, teamwork, problem-solving" data-bind="value: softSkills">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="language">Language Proficiency</label>
                                                            <input type="text" class="form-control" id="language" placeholder="Enter your language proficiency" data-bind="value: languageProficiency">

                                                        </div>
                                                        <button type="submit" data-bind="click: submitSkills" class="btn btn-primary mt-3">Submit</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-xl-6 col-6">
                                            <div class="card mb-3" id="workExperienceCard">
                                                <div class="card-body">
                                                    <h5 class="card-title">Work Experience</h5>
                                                    <form>
                                                        <div class="form-group">
                                                            <label for="internships">Internships</label>
                                                            <textarea class="form-control" id="internships" rows="3" placeholder="Describe your internships" data-bind="value: internships"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="part-time-jobs">Part-time Jobs</label>
                                                            <textarea class="form-control" id="part-time-jobs" rows="3" placeholder="Describe your part-time jobs" data-bind="value: partTimeJobs"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="volunteer-work">Volunteer Work</label>
                                                            <textarea class="form-control" id="volunteer-work" rows="3" placeholder="Describe your volunteer work" data-bind="value: volunteerWork"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="projects">Relevant Projects or Research Experience</label>
                                                            <textarea class="form-control" id="projects" rows="3" placeholder="Describe your relevant projects or research experience" data-bind="value: relevantProjects"></textarea>
                                                        </div>
                                                        <button type="submit" data-bind="click: submitWorkExperience" class="btn btn-primary mt-3">Submit</button>
                                                    </form>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="col-xl-6 col-6">
                                            <div class="card mb-3" id="projectsCard">
                                                <div class="card-body">
                                                    <h5 class="card-title">Projects Done</h5>
                                                    <form>
                                                        <div class="form-group">
                                                            <label for="project-description">Description of Projects Completed</label>
                                                            <textarea class="form-control" id="project-description" rows="3" placeholder="Describe your completed projects" data-bind="value: projectDescription"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="project-objectives">Objectives and Outcomes Achieved</label>
                                                            <textarea class="form-control" id="project-objectives" rows="3" placeholder="Describe the objectives and outcomes of your projects" data-bind="value: projectObjectives"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="project-technologies">Technologies or Tools Used</label>
                                                            <textarea class="form-control" id="project-technologies" rows="3" placeholder="Describe the technologies or tools used in your projects" data-bind="value: projectTechnologies"></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="project-roles">Roles and Responsibilities</label>
                                                            <textarea class="form-control" id="project-roles" rows="3" placeholder="Describe your roles and responsibilities in the projects" data-bind="value: projectRoles"></textarea>
                                                        </div>
                                                        <button type="submit" data-bind="click: submitProjects" class="btn btn-primary mt-3">Submit</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        

                                        <div class="col-xl-6 col-6">
                                            <div class="card mb-3" id="extraCurricularCard">
                                                <div class="card-body">
                                                    <h5 class="card-title">Extracurricular Activities</h5>
