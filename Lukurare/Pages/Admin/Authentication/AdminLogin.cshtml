@page
@model SeekersHub.Pages.Authentication.LoginModel
@{
    //Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<section class="pt-100 login-register">
    <div class="container">
        <div class="row login-register-cover">
            <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
                <div class="text-center">
                    <p class="font-sm text-brand-2">Welcome back! </p>
                    <h2 class="mt-10 mb-5 text-brand-1">Admin Login</h2>
                </div>
                @*<div class="form-group">
                    <label for="roleDropdown">Login As</label>
                    <select class="form-control" id="roleDropdown">
                        <option value="admin">Admin</option>
                        <option value="intern">Intern</option>
                    </select>
                </div>*@
            <form class="login-register text-start mt-20" action="#">
                <div class="form-group">
                    <label class="form-label" for="input-1">Username</label>
                    <input class="form-control" id="input-1" type="text" required="" name="fullname" placeholder="Steven Job" data-bind="value:Username">
                </div>
                <div class="form-group">
                    <label class="form-label" for="input-4">Password *</label>
                    <div class="input-group">
                        <input class="form-control" id="input-4" type="password" required="" name="password" placeholder="************" data-bind="value: Password, attr: { type: PasswordVisible() ? 'text' : 'password' }">
                        <a href="#" class="input-group-addon" id="togglePasswordVisibility" data-bind="click: togglePasswordVisibility">
                            <i data-bind="css: { 'fa-eye': PasswordVisible(), 'fa-eye-slash': !PasswordVisible() }" class="fa" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="login_footer form-group d-flex justify-content-between">
                    <label class="cb-container">
                        <input type="checkbox"><span class="text-small">Remenber me</span><span class="checkmark"></span>
                    </label><a data-bind="click: showInitResetPassword" class='text-muted'>Forgot Password</a>
                </div>
                <div class="form-group">
                    <button class="btn btn-brand-1 hover-up w-100" data-bind="click:login" name="login">Login</button>
                </div>
                <div id="alertArea" class="alert" role="alert" style="display: none;"></div>
                @*<div class="text-muted text-center">Don't have an Account? <a href='/Authentication/Register'>Sign up</a></div>*@
            </form>
            </div>
            <div class="img-1 d-none d-lg-block"><img class="shape-1" src="/assets/imgs/page/login-register/img-4.svg" alt="JobBox"></div>
            <div class="img-2"><img src="/assets/imgs/page/login-register/img-3.svg" alt="JobBox"></div>
        </div>
    </div>
</section>

@section Scripts{
    
     <script src="/assets/js/authentication/login.js"></script>   
        <script src="/vendors/leizam/js/kendoHelpers.js"></script>
    <script src="/Admin/assets/js/authenticationHelper.js"></script>


}